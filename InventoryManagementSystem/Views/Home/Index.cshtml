@{
    ViewData["Title"] = "Home";
}
<section class="bg-primary text-white text-center py-5 mb-4">
    <div class="container">
        <h1 class="display-5 fw-bold">Welcome to Inventrix</h1>
        <p class="lead">Wholesale made simple – Browse, Order, Confirm Delivery</p>
        <a href="/Products" class="btn btn-light btn-lg me-2">
            <i class="bi bi-box-seam"></i> Browse Products
        </a>
    </div>
</section>
<div class="row text-center">
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-truck display-4 text-primary mb-3"></i>
                <h5>Fast Delivery</h5>
                <p>We ensure timely delivery of all wholesale orders right to your business doorstep.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-bag-fill display-4 text-success mb-3"></i>
                <h5>Bulk Discounts</h5>
                <p>Order in bulk and enjoy exclusive wholesale prices tailored for businesses.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-box2-heart display-4 text-danger mb-3"></i>
                <h5>Quality Products</h5>
                <p>All products are sourced from trusted suppliers to guarantee quality and reliability.</p>
            </div>
        </div>
    </div>
</div>

<!-- CTA Footer Section (above dark footer) -->
<section class="bg-light text-center py-5">
    <div class="container">
        <h2 class="mb-3">Ready to streamline your wholesale business?</h2>
        <p class="mb-4">Join Inventrix today and manage your inventory and orders with ease.</p>
        <a href="/Account/Register" class="btn btn-primary btn-lg me-2">Get Started</a>
        <a href="/Home/About" class="btn btn-outline-primary btn-lg">Learn More</a>
    </div>
</section>
